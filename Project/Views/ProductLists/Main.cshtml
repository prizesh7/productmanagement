@model IEnumerable<Project.Models.ProductList>

@{
    ViewBag.Title = "Buy from here";
}

<h2>Buy Your products</h2>
@if (TempData["msg"] != null)
{
<h3 class="alert-success">@TempData["msg"].ToString()</h3>
}
<table class="table">

    <tr>
        <th>
            ProductName
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellPrice)
        </th>
        <th>
            Total Quantity
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        
        <th>Your Quantity</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (((int)item.Quantity) != 0)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <td>
                @Html.TextBox("YourQuantity")
            </td>
            <td>
                @Html.Hidden("id", item.ProductId)
                <input type="submit" value="Buy" class="btn btn-default" />
            </td>
        }
    </tr>
        }
    }

</table>
